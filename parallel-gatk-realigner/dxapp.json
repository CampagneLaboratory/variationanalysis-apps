{
  "name": "parallel-gatk-realigner",
  "title": "Parallel GATK realigner using HaplotypeCaller",
  "summary": "Parallel GATK realigner using HaplotypeCaller",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "Sorted_Bam",
      "label": "A coordinate-sorted BAM alignment",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.bam",
        "*.bam.bai"
      ],
      "help": ""
    },
    {
      "name": "GATK_Arguments",
      "label": "GATK Arguments",
      "class": "string",
      "default": "",
      "optional": true,
      "help": "Extra arguments for GATK 4."
    }
  ],
  "outputSpec": [
    {
      "name": "Realigned_Bam",
      "label": "Realigned BAM",
      "class": "array:file",
      "patterns": [
        "*.bam",
        "*.bam.bai"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "interpreter": "bash",
    "release": "14.04",
    "distribution": "Ubuntu",
    "file": "src/parallel-gatk-realigner.sh"
  },
  "access": {
  "network": [
    "*"
  ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x4"
        }
      }
    }
  }
}
