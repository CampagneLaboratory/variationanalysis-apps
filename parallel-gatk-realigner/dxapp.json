{
  "name": "parallel-gatk-realigner",
  "title": "Realign BAM alignment with HaplotypeCaller",
  "summary": "Run GATK 4 HaplotypeCaller to realign an alignment around indels. Uses the --bamout option of HaplotypeCaller.",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "Sorted_Bam",
      "label": "Sorted BAM alignment",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.bam",
        "*.bam.bai"
      ],
      "help": "A coordinate-sorted BAM alignment."
    },
    {
      "name": "Genome",
      "class": "file",
      "label": "Reference genome.",
      "optional": false,
      "patterns": [
        "*.fa.gz",
        "*.fasta.gz"
      ],
      "help": "Genome in FASTA format compressed with bgzip."
    },
    {
      "name": "GATK_Arguments",
      "label": "GATK Arguments.",
      "class": "string",
      "default": "",
      "optional": true,
      "help": "Extra arguments for GATK 4."
    }
  ],
  "outputSpec": [
    {
      "name": "Realigned_Bam",
      "label": "BAM alignment",
      "class": "array:file",
      "patterns": [
        "*.bam",
        "*.bam.bai"
      ],
      "help": "BAM alignment, realigned with HaplotypeCaller."
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "interpreter": "bash",
    "release": "14.04",
    "distribution": "Ubuntu",
    "file": "src/parallel-gatk-realigner.sh"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "developers": [
    "user-fac2003",
    "user-manuele"
  ],
  "authorizedUsers": [
    "user-fac2003",
    "user-manuele"
  ],

  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem3_ssd1_x16"
        }
      }
    }
  }
}
