{
  "name": "variation-analysis",
  "title": "Variation Analysis",
  "summary": "A framework to train deep learning SNP and Indel models",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "Genome",
      "label": "A Goby indexed Genome",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.ignore",
        "*.names",
        "*.sizes",
        "*.bases"
      ],
      "help": "A Goby indexed genome that the reads were mapped against."
    },
    {
      "name": "goby_aligment",
      "label": "Goby alignment",
      "class": "array:file",
      "optional": false,
      "patterns": [               
        "*.index",
        "*.entries",
        "*.header",
        "*.tmh",
        "*.perm",
        "*.stats"
      ],
      "help": "A Goby alignment."
    }
  ],
  "outputSpec": [
    {
      "name": "predictions",
      "label": "VCF with predictions",
      "class": "array:file",
      "patterns": [
        "*.vcf"
      ],
      "help": "The genotype predictions created from the trained model."
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "interpreter": "bash",
    "release": "14.04",
    "distribution": "Ubuntu",
    "file": "src/VariationAnalysis.sh"
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x4"
        }
      }
    }
  }
}
