{
  "name": "bam-to-goby",
  "title": "BAM to Goby Alignment",
  "summary": "Convert an alignment from BAM to Goby format",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "Realigned_Bam",
      "class": "array:file",
      "label": "BAM alignment",
      "optional": false,
      "patterns": [
        "*.bam",
        "*.bam.bai"
      ],
      "help": "An alignment in BAM format."
    },
    {
      "name": "Genome",
      "class": "file",
      "label": "FASTA Genome",
      "optional": false,
      "patterns": [
        "*.fa.gz",
        "*.fasta.gz"
      ],
      "help": "Genome in the FASTA format. This must be the genome that the alignment was made against."
    }
  ],
  "outputSpec": [
    {
      "name": "Goby_Alignment",
      "label": "Goby Alignment",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.index",
        "*.entries",
        "*.header",
        "*.tmh",
        "*.perm",
        "*.stats"
      ],
      "help": "An alignment in the Goby format."
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "interpreter": "bash",
    "release": "14.04",
    "distribution": "Ubuntu",
    "file": "src/bam-to-goby.sh"
  },
  "access": {
  "network": [
    "*"
  ]
},
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem3_ssd1_x4"
        }
      }
    }
  }
}
