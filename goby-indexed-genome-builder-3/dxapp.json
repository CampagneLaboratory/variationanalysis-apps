{
  "name": "goby-indexed-genome-builder-3",
  "title": "FASTA to Goby Genome",
  "summary": "Build a Goby Indexed Genome from a FASTA reference genome",
  "dxapi": "1.0.0",
  "version": "1.0.2.1",
  "inputSpec": [
    {
      "name": "FASTA_Genome",
      "label": "FASTA Genome",
      "class": "file",
      "optional": false,
      "patterns": [
      "*.fa.gz",
      "*.fasta.gz"
    ],
      "help": "Genome in the FASTA format."
    },
    {
      "name": "Image_Version",
      "label": "Docker Image Version",
      "class": "string",
      "default": "1.0.7",
      "optional": false,
      "help": "The version of variationanalysis-app image to use in the execution."
    }
  ],
  "outputSpec": [
    {
      "name": "Goby_Genome",
      "label": "Goby Indexed Genome",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.ignore",
        "*.names",
        "*.sizes",
        "*.bases"
      ],
      "help": "Goby indexed genome."
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "interpreter": "bash",
    "release": "14.04",
    "distribution": "Ubuntu",
    "file": "src/goby-indexed-genome-builder.sh"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "developers": [
    "org-campagnelab"
  ],
  "authorizedUsers": [
    "org-campagnelab",
    "user-lmesd",
    "user-wenming.xiao.dnax"
  ],
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x4"
        }
      }
    }
  },
  "details": {
    "upstreamAuthor": "Campagne Laboratory",
    "upstreamUrl": "https://github.com/CampagneLaboratory/variationanalysis",
    "upstreamLicenses": ["Apache 2.0"],
    "whatsNew": "Build a Goby Indexed Genome from a FASTA reference genome.",
    "citations": ["https://doi.org/10.1101/338780"]
  }
}
